<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akakom.mobile.belajarhuruf">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_aplabet"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_aplabet"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".kuis.QuizActivity"
            android:parentActivityName=".SplashActivity"></activity>
        <activity
            android:name=".kuis.HighestScoreActivity"
            android:parentActivityName=".SplashActivity"></activity>
        <activity
            android:name=".belajarhuruf.MainActivity"
            android:parentActivityName=".SplashActivity"></activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>